<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_general_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/letter_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="25sp"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/white"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon_contacts"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/letter_label"
                android:src="@drawable/ic_baseline_person_24"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/profile_icon"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/name_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/icon_contacts"
                android:layout_below="@+id/letter_label"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/flag_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_contacts"
                android:layout_toRightOf="@+id/icon_contacts"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/tel_flag"/>

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_contacts"
                android:layout_toRightOf="@+id/flag_img"
                android:layout_marginTop="7dp"
                android:layout_marginStart="5dp"
                android:text="+79164569898"
                android:textSize="18sp"
                android:textColor="@color/profile_icon"/>

            <ImageButton
                android:id="@+id/phone_call_contacts"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/name_contacts"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_phone"/>/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>